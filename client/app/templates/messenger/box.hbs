
<div class="messenger-column">
  <div class="messenger-chat-area">
    <div class="contact-chat" tabindex="0">
      <div {{action 'toggleList'}} class="header">
        {{#if isOnline}}
          <span class="messenger-status"><img width='17px' src="/core/images/connected.png"></span>
        {{else}}
          <span class="messenger-status"><img width='17px' src="/core/images/disconnected.png"></span>
        {{/if}}
        {{!-- <span class="contact-name">{{contactUser.displayName}}</span> --}}
        <span class="contact-name">{{displayName}}</span>
      </div>
      <div class="actions">
        <button {{action 'closeList'}} type="button" class="remove btn btn-danger btn-xs pull-right">
          <span class="glyphicon glyphicon-remove"></span>
        </button>
      </div>

      <div class="action-bar">

      </div>

      {{#if isListOpen}}
        <div>
          {{#if isLoading}}
            <span><img src="/core/images/loading.gif"></span>
          {{/if}}

          {{render 'messenger/messages' messages id=boxId }}

          {{#if isWriting}}
            <div class="contact is-writing">
              {{!-- {{we-avatar userId=contactUser.id width="20px"}} --}}
              {{user-avatar user=this}}
              <span class="small is-writing-text">{{t 'messenger.contact.writing'}}</span>
            </div>
          {{/if}}
          <div class="footer">
            <form {{action "sendMessage" on="submit"}} method="post">
              <div class="input-group">
                {{input name="messageNew" value=messageNew  type="text" placeholder=messagePlaceholder classNames="input-xs"}}
                <span class="input-group-btn">
                  <button  {{action "sendMessage"}} class="btn btn-xs btn-primary" type="submit">{{t "Send"}}</button>
                </span>
              </div>
            </form>
          </div>
        </div>
      {{/if}}

    </div>
  </div>
</div>
